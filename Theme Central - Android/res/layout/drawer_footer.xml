<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/nav_drawer_divider" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_nav_drawer_footer"
        android:drawableLeft="@drawable/ic_settings_small"
        android:drawablePadding="8dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/nav_drawer_left_padding"
        android:text="@string/settings"
        android:textAllCaps="true"
        android:textColor="@color/nav_drawer_footer_text"
        android:textSize="@dimen/nav_drawer_footer_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/nav_drawer_divider" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_nav_drawer_footer"
        android:drawableLeft="@drawable/ic_help_small"
        android:drawablePadding="8dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/nav_drawer_left_padding"
        android:text="@string/help"
        android:textAllCaps="true"
        android:textColor="@color/nav_drawer_footer_text"
        android:textSize="@dimen/nav_drawer_footer_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/nav_drawer_divider" />

</LinearLayout>